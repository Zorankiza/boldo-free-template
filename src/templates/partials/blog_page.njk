{% set blogPage = {
    title:'Thoughts and words',
    subTitle:'Blog',
    btnText:'Load more',
    btnUrl:'./blog.html',
    name: 'Chandler Bing',
    date: 'November 22, 2021',
    text: 'Pitch termsheet backing validation focus release.',
    category: 'Category',
    imgUrl: './images/webp/blog_big_img.webp',
    avatarImgUrl: './images/webp/Chandler Bing.webp',
    titleBlog:'Latest news'
}%}
<section class="w-full container mx-auto max-w-7xl" >
    <div class=" px-2 mb-24 md:py-0 border-b border-gray-500">
        <div class="flex flex-col ">
            <div class="text-center mb-10">
                <p class="text-xl text-darkBlue mb-3">{{ blogPage.subTitle }}</p>
                <h1 class="text-6xl text-darkBlue">{{ blogPage.title }}</h1>
            </div>
            <div class="flex md:flex-row flex-col items-center md:mb-20 mb-10 ">
                <div class="md:mb-6 md:mr-24 ">
                    <img class="" src="{{ blogPage.imgUrl }}">
                </div>
                <div class=" max-w-xl">
                    <div class="flex mb-3">
                        <p class="text-darkBlue font-bold text-base mr-3 ">{{ blogPage.category }}</p>
                        <p class="text-base text-gray-700">{{ blogPage.date }}</p>
                    </div>
                    <div>
                        <p class="mb-5 text-5xl leading-normal" >{{ blogPage.text }}</p>
                    </div>
                    <div class="flex items-center mt-auto ">
                        <img class="mr-3" src="{{ blogPage.avatarImgUrl}} ">
                        <p>{{blogPage.name}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1 class="text-5xl">{{ blogPage.titleBlog }}</h1>
</section>