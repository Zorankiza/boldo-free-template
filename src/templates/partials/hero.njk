{%set hero = {
  title:'Save time by building fast with Boldo Template',
  text:'Funding handshake buyer business-to-business metrics iPad partnership. First mover advantage innovator success deployment non-disclosure',
  btnGreen:'By tamplate',
  btnWhite:'Explore',
  imgUrl:'./images/webp/hero graphics.webp',
  logoWall:'./images/webp/logoWall.webp',
  logoWallDarck:'./images/webp/logoWallDarck.webp'

}%}
<div class="py-16 px-10 {% if pagename == 'homeV2'%} bg-white {% else %} bg-darkBlue {% endif %}">
  <div class="max-w-7xl container mx-auto">
    <div class="flex justify-between align-centar flex-wrap flex-col md:flex-row mb-14 ">
        <div class="flex flex-col w-full md:w-2/5 justify-center items-cetar text-center md:text-left {% if pagename == 'homeV2'%} text-black {% else %} text-white {%endif%}">
            <h1 class="my-4 text-5xl leading-tight ">{{ hero.title }}</h1>
            <p class="leading-normal text-2xl mb-8 {% if pagename == 'homeV2'%} text-gray-400 {% endif %}">{{ hero.text }}</p>
            <div class='flex-row'>
              <button class="mx-auto lg:mx-0 hover:underline font-bold rounded-full my-6 py-4 px-14 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out
                {% if pagename == 'homeV2' %} text-white bg-darkBlue {% else %} bg-lightGreen  text-darkBlue {% endif %}
              ">{{ hero.btnGreen }}</button>
              <button class="mx-auto lg:mx-6 hover:underline border-2  font-bold rounded-full my-6 py-4 px-14 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out
                {% if pagename == 'homeV2' %} text-darkBlue border-darkBlue {% else %} text-white border-white {% endif %}
              ">{{ hero.btnWhite }}</button>
            </div>
        </div>
        <div class="">
            <img class="hero_img w-full md:w-4/5 z-50" src="{{ hero.imgUrl }}"/>
        </div>
    </div>
  </div>
</div>
<div class="flex justify-center {% if pagename == 'homeV2' %} bg-white {% else %} bg-darkBlue {% endif %}">
   <img class="" src="{% if pagename == 'homeV2' %} {{ hero.logoWallDarck }} {% else %} {{ hero.logoWall }} {% endif %}" >
</div>