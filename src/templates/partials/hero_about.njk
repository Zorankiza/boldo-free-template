            </div>
            <p class="text-base">{{ heroAbout.text }}</p>
        </div>
    </div>
    <div class="container md:px-0 px-2.5 max-w-6xl mx-auto -mt-20 mb-32 items-stretch flex md:flex-row flex-col justify-around {% if pagename == 'aboutV2'%} hidden {% else %} block {% endif%}">
