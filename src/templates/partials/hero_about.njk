{%set heroAbout = {
    title:'We love. to make great things, things that matter',
    subTitle:'About',
    text:'Funding handshake buyer business-to-business metrics iPad partnership. First mover advantage innovator success deployment non-disclosure',
    imgGridUrlLeftTop:'./images/webp/hero_img_1.webp',
    imgGridUrlLeftBottom:'./images/webp/hero_img_2.webp',
    imgGridUrlCenter:'./images/webp/hero_img_3.webp',
    imgGridUrlRightTop:'./images/webp/hero_img_4.webp',
    imgGridUrlRightBottom:'./images/webp/hero_img_5.webp'
}%}
<section class="hero mb-6">
    <div class="pt-14 md:px-0 px-2.5 pb-40 {% if pagename =='aboutV2'%} bg-lightGreen text-darkBlue {% else %} bg-darkBlue text-white {% endif %}">
        <div class=" container mx-auto flex {% if pagename == 'aboutV2'%} flex-col md:flex-row max-w-7xl text-darkBlue {% else %} flex-col text-center max-w-3xl text-gray-200 {% endif %}}">
